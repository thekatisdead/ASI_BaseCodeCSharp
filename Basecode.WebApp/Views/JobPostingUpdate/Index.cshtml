@using Basecode.Data.Models
@model JobOpening

@{
    ViewData["Title"] = "Job Posting Update";
    Layout = "~/Views/Shared/_LayoutHR.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Posting - Update</title>
    <link rel="stylesheet" href="~/css/jobpostingupdate.css" asp-append-version="true" />
</head>
<body>
    <header>
        <h1>UPDATE JOB</h1>
    </header>
    <main>
        <section class="job-form">
            <form asp-controller="JobPostingUpdate" asp-action="Update" method="post">
                <div class="form-group">
                    <label for="position" class="label-bold">Position:</label>
                    <input type="text" id="position" name="position" placeholder="" class="input-large" value="@Model.Position">
                </div>
                <div class="form-group">
                    <label for="job-type" class="label-bold">Job Type:</label>
                    <input type="text" id="job-type" name="job-type" placeholder="" class="input-large" value="@Model.JobType">
                </div>
                <div class="form-group">
                    <label for="salary" class="label-bold">Salary:</label>
                    <input type="text" id="salary" name="salary" placeholder="" class="input-large" value="@Model.Salary">
                </div>
                <div class="form-row">
                    <label for="schedule" class="label-bold">Schedule:</label>
                </div>
                <div class="form-row">
                    <div class="input-group">
                        <label for="hours" class="small-label">Hours:</label>
                        <input type="text" id="hours" name="hours" placeholder="" class="input-small" value="@Model.Hours">
                    </div>
                    <div class="input-group">
                        <label for="shift" class="small-label">Shift:</label>
                        <select id="shift" name="shift" class="input-small">
                            <option value="morning" selected="@(Model.Shift == "morning" ? "selected" : null)">Morning</option>
                            <option value="evening" selected="@(Model.Shift == "evening" ? "selected" : null)">Evening</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="details" class="label-bold">Details:</label>
                    <textarea id="details" name="details" placeholder="" class="input-large-details">@Model.Description</textarea>
                </div>
                <div class="button-container">
                    <button type="submit" class="btn">Update</button>
                </div>
            </form>
        </section>
    </main>
    <div class="triangle"></div>
    <div class="triangle1"></div>
</body>
</html>