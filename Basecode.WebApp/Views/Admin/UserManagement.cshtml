@{
    Layout = "~/Views/Shared/_NoLayout.cshtml";
}

@using Basecode.Data.Models
@model List<User>

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0-alpha3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/admindashboard.css" asp-append-version="true" />
    <script defer src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script defer src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script defer src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script defer src="~/js/AdminTable.js"></script>
</head>

<body>
    <div class="container-fluid" style="position: absolute; right: 0px; font-family: Helvetica;">
        <div class="row flex-nowrap">
            @await Html.PartialAsync("./_AdminSideBar")
            <div class="col-lg">
                <div class="row flex-nowrap">
                    @await Html.PartialAsync("./_UpperBarAdmin")
                </div>
                <div class="row flex-nowrap bg-light dashboard-section">
                    <div class="col container table-responsive-sm">
                        <div class="p-4"></div>
                        <table id="myTable" class="table table-striped table-hover rounded-table">
                            <thead class="text-center">
                                <tr class="text-center">
                                    <th class="text-center">Username</th>
                                    <th class="text-center">Firstname</th>
                                    <th class="text-center">Lastname</th>
                                    <th class="text-center">Email</th>
                                    <th class="text-center">Contact Number</th>
                                    <th class="text-center">Address</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var user in Model)
                                {
                                    <tr class="text-center">
                                        <td class="text-center">@user.Username</td>
                                        <td class="text-center">@user.FirstName</td>
                                        <td class="text-center">@user.LastName</td>
                                        <td class="text-center">@user.Email</td>
                                        <td class="text-center">@user.ContactNumber</td>
                                        <td class="text-center">@user.Address</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>