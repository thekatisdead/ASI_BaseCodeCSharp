@{
    Layout = "~/Views/Shared/_NoLayout.cshtml";
}

@using Basecode.Data.ViewModels
@model List<UserViewModel>

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0-alpha3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/admindashboard.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script defer src="~/js/AdminTable.js"></script>
</head>

<body>
    <main class="container-fluid" style="position: absolute; right: 0px; font-family: Helvetica;">
        <div class="row">
            @await Html.PartialAsync("./_AdminSideBar")
            <div class="col-lg">
                <div class="row">
                    @await Html.PartialAsync("./_UpperBarAdmin")
                </div>

                <div class="row flex-nowrap bg-light dashboard-section">
                <section class="admin-table">
                    <h2 class="section-title">User List</h2>
                        <table id="myTable" class="table table-striped table-hover rounded-table">
                        <thead class="header">
                            <tr>
                                <th class="text-center">Firstname</th>
                                <th class="text-center">Lastname</th>
                                <th class="text-center">Email</th>
                                <th class="text-center">Contact Number</th>
                                <th class="text-center">Address</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td class="table-cell">@user.FirstName</td>
                                    <td class="table-cell">@user.LastName</td>
                                    <td class="table-cell">@user.Email</td>
                                    <td class="table-cell">@user.ContactNumber</td>
                                    <td class="table-cell">@user.Address</td>
                                    <td class="table-cell">
                                        <a asp-controller="Admin" asp-action="Update" asp-route-id="@user.Email">Edit</a>
                                        <a asp-controller="Admin" asp-action="Delete" asp-route-id="@user.Email">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </section>
                </div>
            </div>
        </div>
    </main>
</body>
</html>