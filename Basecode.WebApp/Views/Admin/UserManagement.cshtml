@{
    Layout = "~/Views/Shared/_NoLayout.cshtml";
}
@using Basecode.Data.Models
@model List<User>

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0-alpha3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/admindashboard.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script defer src="~/js/AdminTable.js"></script>
</head>

<body>
    <div class="container-fluid" style="position: absolute; right: 0px; font-family: Helvetica;">
        <div class="row flex-nowrap">
            @await Html.PartialAsync("./_AdminSideBar")
            <div class="col-lg">
                <div class="row flex-nowrap">
                    @await Html.PartialAsync("./_UpperBarAdmin")
                </div>
                <div class="row flex-nowrap bg-light dashboard-section">
                    <div class="col container table-responsive-sm">
                        <div class="p-4">
                        </div>
                        <table id="myTable" class=" table table-striped table-hover rounded-table" style="">
                            <thead>
                                <tr> 
                                    <th>
                                        Firstname
                                    </th>
                                    <th>
                                        Lastname
                                    </th>
                                    <th>
                                        Contact Number
                                    </th>
                                    <th>
                                        Email 
                                    </th>
                                    <th>
                                        Address
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>
                                            @user.FirstName
                                        </td>
                                        <td>
                                            @user.LastName
                                        </td>
                                        <td>
                                            @user.ContactNumber
                                        </td>
                                        <td>
                                            @user.Email
                                        </td>
                                        <td>
                                            @user.Address
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="Admin" asp-action="Update" asp-route-id="@user.Username">Edit</a>
                                            <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Username">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>