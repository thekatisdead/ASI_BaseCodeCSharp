@{
    Layout = "~/Views/Shared/_NoLayout.cshtml";
}
@using Basecode.Data.ViewModels
@model List<UserViewModel>

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0-alpha3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" />
    <script defer src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script defer src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script defer src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>

    <script defer src="~/js/AdminTable.js"></script>
</head>
<body>
    <div class="container-fluid" style="position:absolute;right:0px;font-family: Helvetica">
        <div class="row flex-nowrap">
            @await Html.PartialAsync("./_AdminSideBar")
            <div class="col-lg ">
                <div class="row flex-nowrap">
                    @await Html.PartialAsync("./_UpperBarAdmin")
                </div>
                <div class="row flex-nowrap bg-light" style="height:87%">
                    <div class="col container table-responsive-sm">
                        <div class="p-4">
                        </div>
                        <table id="myTable" class=" table table-striped table-hover rounded-table" style="">
                            <thead class="text-center">
                                <tr class="text-center">
                                    <th class="text-center">
                                        Username
                                    </th>
                                    <th class="text-center">
                                        Password
                                    </th>
                                    <th class="text-center">
                                        Firstname
                                    </th>
                                    <th class="text-center">
                                        Lastname
                                    </th>
                                    <th class="text-center">
                                        Email Address
                                    </th>
                                    <th class="text-center">
                                        Address
                                    </th>
                                    <th class="text-center">
                                        Role
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var user in Model)
                                {
                                    <tr class="text-center">
                                        <td class="text-center">
                                            @user.UserName
                                        <td class="text-center">
                                            @user.Password
                                        </td>
                                        <td class="text-center">
                                            @user.FirstName
                                        </td class="text-center">
                                        <td class="text-center">
                                            @user.LastName
                                        </td>
                                        <td class="text-center">
                                            @user.EmailAddress
                                        </td>
                                        <td class="text-center">
                                            @user.Address
                                        </td>
                                        <td class="text-center">
                                            @user.RoleName
                                        <td class="text-center">
                                            <a asp-controller="UserManagement" asp-action="UpdateUser" asp-route-id="@user.Id">Edit</a>
                                            <a asp-controller="UserManagement" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
