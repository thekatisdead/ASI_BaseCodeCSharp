@using Basecode.Data.ViewModels
@model JobOpeningViewModel

@{
    ViewData["Title"] = "Job Posting Update";
    Layout = "~/Views/Shared/_LayoutHR.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Posting - Confirm Delete</title>
</head>
<body>
    <header>
        <h1>Delete JOB</h1>
    </header>
    <main>
        <section class="job-form">
            <p>Are you sure you want to delete the job: @Model.Position?</p>

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="JobList" class="btn btn-secondary">Cancel</a>
            </form>

            <script>
                $(document).ready(function () {
                    $('form').submit(function () {
                        return confirm("Are you sure you want to delete this Job?");
                    });
                });
            </script>
        </section>
    </main>
    <div class="triangle"></div>
    <div class="triangle1"></div>
</body>
</html>