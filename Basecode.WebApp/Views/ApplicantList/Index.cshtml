@using Basecode.Data.ViewModels
@model List<ApplicantListViewModel>

@{
    ViewData["Title"] = "[Title] Application Tracking";
    Layout = "~/Views/Shared/_LayoutHR.cshtml";
}
<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="~/css/applicantlist.css" asp-append-version="true" />
</head>
<html>
    <body>
<main><br />
<table class="table py-lg-4 rounded-table table-light">
    <thead>
        <tr class="text-center header" style="color:white;">
            <th scope="col">Applicant Name</th>
            <th scope="col">Position</th>
            <th scope="col">Status</th>
            <th scope="col">Last Activity</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var applicant in Model){
            <tr class="text-center">
                <td>@applicant.Firstname @applicant.Lastname</td>
                <td>@applicant.JobApplied</td>
                <td>@applicant.Tracker</td>
                <td>N/A</td>
                <td>
                   <a asp-action="ViewProfile" asp-route-id="@applicant.Id"><button class="btn btn-secondary">View Profile</button></a>
                </td>
            </tr>
        }      
    </tbody>
</table>
        
<div class="triangle"></div>
<div class="small-triangle"> </div>
</main>
</body>
</html>