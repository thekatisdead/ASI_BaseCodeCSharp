@using Basecode.Data.ViewModels
@model List<JobOpeningViewModel>
@{
    ViewData["Title"] = "Applicant Homepage";
    Layout = "~/Views/Shared/_LayoutHR.cshtml";
}
<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="~/css/applicanthomepage.css" />
    </head>
    <body>
        <div class="container mt-5 mb-3">
            <div class="row">
                @foreach(var job in Model)
                {
                <div class="col-md-4">
                    <div class="card p-3 mb-2">
                        <div class="mt-5 mb-5">
                            <h5 class="card-title">@job.Position</h5>
                            <div class="row d-flex">
                                <div class="col-md-4 bg-light"> <h6 class="card-subtitle mb-2 text-muted">@job.JobType</h6> </div>
                                <div class="col-md-4 bg-light"> <h6 class="card-subtitle mb-2 text-muted">&#8369;@job.Salary</h6> </div>
                                <div class="col-md-4 bg-light"> <h6 class="card-subtitle mb-2 text-muted">@job.Hours</h6> </div>
                                <div class="col-md-4 bg-light"> <h6 class="card-subtitle mb-2 text-muted"> @job.Shift Shift</h6> </div>
                            </div>                          
                            <p class="card-text">@job.Description</p>
                            <button class="btn text-light" style="background-color:#c53211">Apply Now!</button>
                        </div>
                    </div>
                </div>
                }
                
            </div>
        </div>
    </body>
</html>
