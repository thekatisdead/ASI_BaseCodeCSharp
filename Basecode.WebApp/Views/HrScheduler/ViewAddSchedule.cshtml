@{
    ViewData["Title"] = "HR Scheduler";
    Layout = "~/Views/Shared/_LayoutHR.cshtml";
}
@using Basecode.Data.ViewModels


<!DOCTYPE html>
<html>
<head>
    <title>Hr Scheduler</title>
    <link rel="stylesheet" href="~/css/hrscheduler.css" asp-append-version="true" />
</head>
<body>
    <form asp-action="Add">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2>Interview Schedule Details Input Form</h2>
        <hr>

        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" />
            <h3 class="section-title">Schedule Details</h3>
            <hr class="divider">
            <div class="input-group">
                <select class="text-input" aria-label="Select Interviewer">
                    <option selected>Select Interviewer</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                <span class-type="text-danger"></span>
                <br>
                <label for="first-name">Interviewers Name</label>
            </div>
            <div class="input-group">
                <select class="text-input" aria-label="Select Job Opening">
                    <option selected>Select Job Opening</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                <span  class-type="text-danger"></span>
                <br>
                <label for="last-name">Job opening</label>
            </div>
            <h4 class="section-title">Time and Date</h4>
            <div class="input-email">
                <input  type="time" id="email" class="text-input" >
                <span  class-type="text-danger"></span>
            </div>
            <div class="input-email">
                <input  type="date" id="last-name" class="text-input">
                <span  class-type="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="save-button">Save</button>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </form>
    <div class="triangle"></div>
    <div class="triangle1"></div>
</body>
</html>
