@page
@model LoginModel;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_NoLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/loginstyles.css" asp-append-version="true" />
</head>
<body>
    <div class="box-form">
        <!-- Left Side -->
        <div class="left">
            <div class="overlay">
                <h1>Hello World.</h1>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur et est sed felis aliquet sollicitudin</p>

                <div class="back-to-home">
                    <button type="button" onclick="location.href='@Url.Action("Index", "Home")'" class="forSubmit">
                        Back to Home
                    </button>
                </div>
            </div>
        </div>

        <!-- Right Side -->
        <div class="right">
            <div class="text-center">
                <div class="logInContainer">
                    <h2 style="color: white;">Login</h2>
                    <form id="account" method="post">
                        <div class="forUsername">
                            <label class="control-label"></label>
                            <input name="Username" asp-for="Input.Username" placeholder="Username" class="username" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <div class="forPassword">
                            <label class="control-label"></label>
                            <input type="password" name="Password" asp-for="Input.Password" placeholder="Password" class="password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="button-box">
                            <button class="forSubmit">LOGIN</button>
                        </div>
                        @section Scripts {
                            <partial name="_ValidationScriptsPartial" />
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>                       